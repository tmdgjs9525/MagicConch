<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <Style TargetType="units:DragableConch">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:DragableConch">
                    <Canvas x:Name="PART_ConchCanvas">
                        <Image
                            x:Name="PART_Body"
                            Width="700"
                            Height="700"
                            IsHitTestVisible="False"
                            Source="/MagicConch;component/Assets/Images/Conch_Body.png" />

                        <Border x:Name="PART_Handle" Canvas.Left="490" Canvas.Top="120" Background="Transparent">
                            <Image
                                Width="150"
                                Height="150"
                                IsHitTestVisible="False"
                                Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
                        </Border>

                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
