<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <Style TargetType="units:DragableConch">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:DragableConch">
                    <Canvas x:Name="PART_ConchCanvas">
                        <Image
                            x:Name="PART_Body"
                            IsHitTestVisible="False"
                            Source="/MagicConch;component/Assets/Images/Conch_Body.png" />

                        <Border 
                            x:Name="PART_Handle"
                            
                            Background="Transparent" >
                            <Image IsHitTestVisible="False" Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
                        </Border>

                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
