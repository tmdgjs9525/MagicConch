<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <Style TargetType="units:AlarmClock">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:AlarmClock">
                    <Grid>
                        <Image
                            x:Name="PART_AlarmClockViewBox"
                            HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5"
                            Source="/MagicConch;component/Assets/Images/AlarmClock.png"
                            Stretch="Fill" />

                        <MediaElement
                            x:Name="PART_MediaElement"
                            AutoPlay="False"
                            Volume="0" />
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
