<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <Style TargetType="units:AlarmClock">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:AlarmClock">
                    <Viewbox HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" x:Name="PART_AlarmClockViewBox" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Fill">
                        <Image Source="/MagicConch;component/Assets/Images/AlarmClock.png" />
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
