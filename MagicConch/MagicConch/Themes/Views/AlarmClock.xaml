<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <Style TargetType="units:AlarmClock">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:AlarmClock">
                    <Grid>
                        <Viewbox
                            x:Name="PART_AlarmClockViewBox"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            HorizontalAlignment="Left"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Fill">
                            <Image Source="/MagicConch;component/Assets/Images/AlarmClock.png" />
                        </Viewbox>

                        <MediaElement
                            x:Name="PART_MediaElement"
                            AutoPlay="False"
                            Volume="0" />
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
