<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <Style TargetType="units:ToolTipUnderLineButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:ToolTipUnderLineButton">
                    <Grid>
                        <support:UnderLineButton
                            x:Name="PART_UnderLineButton"
                            Background="{TemplateBinding Background}"
                            CharacterSpacing="{TemplateBinding CharacterSpacing}"
                            Content="{TemplateBinding Content}"
                            FontFamily="{TemplateBinding FontFamily}"
                            FontSize="{TemplateBinding FontSize}" />
                        <Popup
                            x:Name="PART_Popup"
                            Placement="Bottom"
                            StayOpen="False">
                            <Border>
                                <TextBlock
                                    Padding="10"
                                    FontSize="12"
                                    Foreground="White"
                                    Text="{TemplateBinding ToolTipText}" />
                            </Border>
                        </Popup>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
