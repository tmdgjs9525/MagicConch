<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <Style TargetType="units:FloattingBubble">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:FloattingBubble">
                    <Image Source="/MagicConch;component/Assets/Images/Bubble.png" Width="200" Height="200" x:Name="PART_Image">
                        <Image.RenderTransform>
                            <TranslateTransform x:Name="PART_TranslateTransform"/>
                        </Image.RenderTransform>
                    </Image>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
