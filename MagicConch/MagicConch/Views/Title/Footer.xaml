<UserControl
    x:Class="MagicConch.Views.Title.Footer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MagicConch.Views.Title">

    <Grid>
        <Button
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            VerticalContentAlignment="Bottom"
            Background="Transparent">
            <Button.Content>
                <Image
                    Width="200"
                    Height="200"
                    IsHitTestVisible="False"
                    Source="/MagicConch;component/Assets/Images/AlarmClock.png" />
            </Button.Content>
        </Button>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            CharacterSpacing="-40"
            FontFamily="{StaticResource GothamBook}"
            FontSize="24"
            Text="Ask the magic conch anything and follow that answer, Luck will be with you in any form" />
    </Grid>
</UserControl>
