<UserControl
    x:Class="MagicConch.Views.Title.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <UserControl.Resources />
    <Grid>
        <TextBlock
            HorizontalAlignment="Left"
            FontFamily="{StaticResource GothamLight}"
            FontSize="18"
            Text="Magic conch" />

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <support:SequentialRevealButton
                VerticalAlignment="Top"
                Background="Transparent"
                FontFamily="{StaticResource GothamLight}"
                FontSize="18"
                StartDelay="500"
                Text="Coded"
                Duration="0:0:1.4" />
            <support:SequentialRevealButton
                Margin="20,0,0,0"
                VerticalAlignment="Top"
                FontFamily="{StaticResource GothamLight}"
                FontSize="18"
                StartDelay="500"
                Text="Design"
                Duration="0:0:1.4" />
        </StackPanel>
    </Grid>
</UserControl>
