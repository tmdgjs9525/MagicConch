<UserControl
    x:Class="MagicConch.Views.Title.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:MagicConch.Behavior"
    xmlns:cnvtrs="clr-namespace:MagicConch.Converter"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <UserControl.Resources>
        <cnvtrs:BoolToOnOffConverter x:Key="BoolToOnOffConverter" />

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource GothamBook}" />
            <Setter Property="IsHitTestVisible" Value="False" />
            <Setter Property="FontSize" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=90}" />
        </Style>

    </UserControl.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock
                CharacterSpacing="-40"
                IsHitTestVisible="False"
                Style="{StaticResource HeaderTextStyle}"
                Text="{Binding CurrentTime}" />

            <TextBlock
                Margin="7,-2,0,0"
                VerticalAlignment="Center"
                FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=160}"
                IsHitTestVisible="False"
                Text="●">
                <i:Interaction.Behaviors>
                    <behavior:BlinkBehavior Duration="0:0:0.7" />
                </i:Interaction.Behaviors>
            </TextBlock>

            <TextBlock
                Margin="7,0,0,0"
                CharacterSpacing="-40"
                Style="{StaticResource HeaderTextStyle}"
                Text="{Binding CountryName}" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <support:UnderLineButton
                Background="Transparent"
                CharacterSpacing="-40"
                Content="Coded"
                FontFamily="{StaticResource GothamBook}"
                FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=90}" />

            <support:UnderLineButton
                Margin="20,0,0,0"
                Background="Transparent"
                CharacterSpacing="-40"
                Content="Design"
                FontFamily="{StaticResource GothamBook}"
                FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=90}" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <units:Equalizer
                Height="20"
                Margin="0,0,0,2"
                VerticalAlignment="Bottom"
                BarCount="5"
                BarMargin="3,0,0,0"
                BarWidth="2"
                IsHitTestVisible="False" />

            <ToggleButton>
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="Margin" Value="13,0,0,0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="CharacterSpacing" Value="-40" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="IsChecked" Value="{Binding IsMusicPlaying, Mode=TwoWay}" />
                        <Setter Property="Content" Value="{Binding IsMusicPlaying, StringFormat='Sound : {0:ON;OFF}', Converter={StaticResource BoolToOnOffConverter}}" />
                        <Setter Property="FontFamily" Value="{StaticResource GothamBook}" />
                        <Setter Property="FontSize" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=90}" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </StackPanel>

    </Grid>
</UserControl>
