<UserControl
    x:Class="MagicConch.Views.Title.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <UserControl.Resources />
    <Grid>
        <TextBlock
            HorizontalAlignment="Left"
            FontFamily="{StaticResource GothamLight}"
            FontSize="18"
            Text="Magic conch" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <support:UnderLineButton
                Background="Transparent"
                FontFamily="{StaticResource GothamLight}"
                FontSize="18"
                Content="Coded" />
            <!--
                StartDelay="400"
                
                Duration="0:0:0.6"
            -->
            <support:UnderLineButton
                Margin="20,0,0,0"
                FontFamily="{StaticResource GothamLight}"
                FontSize="18"
                Content="Design" />
            <!--
                StartDelay="400"
                
                Duration="0:0:0.6"
            -->
        </StackPanel>
    </Grid>
</UserControl>
