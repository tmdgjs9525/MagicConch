<UserControl
    x:Class="MagicConch.Views.Title.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <UserControl.Resources />
    <Grid>
        <TextBlock
            HorizontalAlignment="Left"
            CharacterSpacing="-40"
            FontFamily="{StaticResource GothamBook}"
            FontSize="24"
            Text="9:00 PM, KST ● Korea" />

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <support:UnderLineButton
                Background="Transparent"
                Content="Coded"
                FontFamily="{StaticResource GothamBook}"
                FontSize="24" />

            <support:UnderLineButton
                Margin="20,0,0,0"
                Content="Design"
                FontFamily="{StaticResource GothamBook}"
                FontSize="24" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Right">
            <TextBlock
                CharacterSpacing="-40"
                FontFamily="{StaticResource GothamBook}"
                FontSize="24"
                Text="Sound : ON" />
        </StackPanel>

    </Grid>
</UserControl>
