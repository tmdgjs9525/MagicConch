<UserControl
    x:Class="MagicConch.Views.Title.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:MagicConch.Behavior"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <UserControl.Resources />
    <Grid>
        <StackPanel
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                CharacterSpacing="-40"
                FontFamily="{StaticResource GothamBook}"
                FontSize="20"
                Text="{Binding CurrentTime}" />

            <TextBlock
                Margin="7,-2,0,0" VerticalAlignment="Center"
                FontSize="12"
                Text="●">
                <i:Interaction.Behaviors>
                    <behavior:BlinkBehavior Duration="0:0:0.7" />
                </i:Interaction.Behaviors>
            </TextBlock>

            <TextBlock
                Margin="7,0,0,0"
                CharacterSpacing="-40"
                FontFamily="{StaticResource GothamBook}"
                FontSize="20"
                Text="{Binding CountryName}" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <support:UnderLineButton
                Background="Transparent"
                CharacterSpacing="-40"
                Content="Coded"
                FontFamily="{StaticResource GothamBook}"
                FontSize="20" />

            <support:UnderLineButton
                Margin="20,0,0,0"
                CharacterSpacing="-40"
                Content="Design"
                FontFamily="{StaticResource GothamBook}"
                FontSize="20" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <units:Equalizer
                BarCount="5" Height="15"
                BarMargin="3,2,0,0"
                BarWidth="2" />
            <TextBlock
                Margin="13,0,0,0"
                CharacterSpacing="-40"
                FontFamily="{StaticResource GothamBook}"
                FontSize="20"
                Text="Sound : ON" />
        </StackPanel>

    </Grid>
</UserControl>
