<UserControl
    x:Class="MagicConch.Views.Title.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:MagicConch.Behavior"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource GothamBook}" />
            <Setter Property="FontSize" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=90}" />
        </Style>

    </UserControl.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock
                CharacterSpacing="-40"
                Style="{StaticResource HeaderTextStyle}"
                Text="{Binding CurrentTime}" />

            <TextBlock
                Margin="7,-2,0,0"
                VerticalAlignment="Center"
                FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=160}"
                Text="●">
                <i:Interaction.Behaviors>
                    <behavior:BlinkBehavior Duration="0:0:0.7" />
                </i:Interaction.Behaviors>
            </TextBlock>

            <TextBlock
                Margin="7,0,0,0"
                CharacterSpacing="-40"
                Style="{StaticResource HeaderTextStyle}"
                Text="{Binding CountryName}" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <support:UnderLineButton
                Background="Transparent"
                CharacterSpacing="-40"
                Content="Coded"
                FontFamily="{StaticResource GothamBook}"
                FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=90}" />

            <support:UnderLineButton
                Margin="20,0,0,0"
                CharacterSpacing="-40"
                Content="Design"
                FontFamily="{StaticResource GothamBook}"
                FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=90}" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <units:Equalizer
                Height="15"
                BarCount="5"
                BarMargin="3,2,0,0"
                BarWidth="2" />
            <TextBlock
                Margin="13,0,0,0"
                CharacterSpacing="-40"
                Style="{StaticResource HeaderTextStyle}"
                Text="Sound : ON" />
        </StackPanel>

    </Grid>
</UserControl>
