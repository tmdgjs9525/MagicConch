<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <Border Background="Blue">
        <Grid
            x:Name="grid"
            Width="1920"
            Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="330" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <local:Header Grid.Row="0" />

            <support:SequentialRevealTextBlock
                x:Name="test"
                Grid.Row="1"
                Margin="0,50,0,0"
                VerticalAlignment="Top" HorizontalAlignment="Center"
                FontFamily="{StaticResource BASKVILL}"
                FontSize="250" Delay="100"
                FontWeight="Bold"
                Text="WATSON"
                Offset="{Binding RelativeSource={RelativeSource Self},Path=ActualWidth}"
                Duration="0:0:1.5" />

        </Grid>
    </Border>
</UserControl>
