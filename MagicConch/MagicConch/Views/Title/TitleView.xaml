<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:MagicConch.Converters"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <UserControl.Resources>
        <cnvtrs:AddValueConverter x:Key="AddValueConverter" />
    </UserControl.Resources>
    <Border Background="Blue">
        <Grid
            x:Name="grid"
            Width="1920"
            Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <local:Header Grid.Row="0" />

            <support:SequentialRevealTextBlock
                x:Name="test"
                Grid.Row="1"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Delay="55"
                FontFamily="{StaticResource BASKVILL}"
                FontSize="250"
                FontWeight="Bold"
                Text="MAGIC CONCH"
                Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight,Converter={StaticResource AddValueConverter},ConverterParameter=300}"
                Duration="0:0:2" />

        </Grid>
    </Border>
</UserControl>
