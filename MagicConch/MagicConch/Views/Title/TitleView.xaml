<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:MagicConch.Support.Converters;assembly=MagicConch.Support"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <UserControl.Resources />
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#12F9EF" />
                <GradientStop Offset="0.3" Color="#61FAF8" />
                <GradientStop Offset="0.6" Color="#0AC1FA" />
                <GradientStop Offset="0.8" Color="#0AA3F1" />
                <GradientStop Offset="1" Color="#0071E7" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Canvas x:Name="BubbleCanvas" />
            <Border Width="1920">
                <Border.Background>
                    <ImageBrush ImageSource="/MagicConch;component/Assets/Images/JellyFish.png" />
                </Border.Background>
                <Grid x:Name="grid" Margin="50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <local:Header x:Name="header" Grid.Row="0" />

                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <support:SequentialRevealTextBlock
                            Delay="25"
                            FontFamily="{StaticResource GothamLight}"
                            FontSize="18"
                            StartDelay="500"
                            Text="&quot;Don't doubt the "
                            Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Duration="0:0:0.5" />
                        <support:SequentialRevealTextBlock
                            Delay="25"
                            FontFamily="{StaticResource GothamLight}"
                            FontSize="18"
                            FontWeight="Bold"
                            StartDelay="1000"
                            Text="MAGIC CONCH "
                            Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Duration="0:0:0.3" />
                        <support:SequentialRevealTextBlock
                            Delay="25"
                            FontFamily="{StaticResource GothamLight}"
                            FontSize="18"
                            StartDelay="1300"
                            Text="ability.&quot;"
                            Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Duration="0:0:0.3" />
                    </StackPanel>


                    <support:SequentialRevealTextBlock
                        Grid.Row="1"
                        Height="275"
                        Margin="0,50,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Delay="55"
                        FontFamily="{StaticResource BASKVILL}"
                        FontSize="250"
                        Text="MAGIC CONCH"
                        Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                        Duration="0:0:1.2" />

                    <Image
                        Grid.Row="2"
                        Width="160"
                        Height="160"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Source="/MagicConch;component/Assets/Images/Logo.png" />

                    <Viewbox Grid.RowSpan="4" Width="850" Height="850" Margin="120,0,0,60">
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="10"/>
                        </Viewbox.RenderTransform>
                        <Grid>
                            <Image Source="/MagicConch;component/Assets/Images/Conch_Body.png" />
                            <Image Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
                        </Grid>
                    </Viewbox>

                </Grid>
            </Border>
        </Grid>

    </Border>
</UserControl>
