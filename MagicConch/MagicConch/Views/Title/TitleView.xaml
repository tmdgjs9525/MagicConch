<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:MagicConch.Converter"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <UserControl.Resources>
        <cnvtrs:FontSizeConverter x:Key="FontSizeConverter" />
    </UserControl.Resources>
    <Grid>
        <Canvas x:Name="BubbleCanvas" />
        <Border>
            <Grid x:Name="grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <local:Header x:Name="header" Grid.Row="0" />

                <Image
                    Grid.RowSpan="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False"
                    Source="/MagicConch;component/Assets/Images/Conch_Glow.png"
                    Stretch="Uniform" />

                <!--<Viewbox
                    x:Name="viewbox"
                    Grid.Row="1"
                    Margin="-6,-13,-6,0"
                    VerticalAlignment="Top"
                    Stretch="Uniform"
                    StretchDirection="DownOnly">-->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    IsHitTestVisible="False"
                    Orientation="Horizontal">
                    <support:SequentialRevealTextBlock
                        Margin="0,0,0,0"
                        Delay="70"
                        FontFamily="{StaticResource BASKVILL}"
                        FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource FontSizeConverter}, ConverterParameter=7.31}"
                        StartDelay="300"
                        Text="MAGIC "
                        Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                        Duration="0:0:1.4" />
                    <support:SequentialRevealTextBlock
                        Margin="0,0,0,0"
                        Delay="70"
                        FontFamily="{StaticResource BASKVILL}"
                        FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource FontSizeConverter}, ConverterParameter=7.31}"
                        StartDelay="700"
                        Text="CONCH"
                        Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                        Duration="0:0:1.4" />
                </StackPanel>
                <!--</Viewbox>-->

                <Grid
                    Grid.Row="0"
                    Grid.RowSpan="4"
                    IsHitTestVisible="False">
                    <Image
                        Width="580"
                        Height="580"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/MagicConch;component/Assets/Images/Conch_Body.png" />
                    <Image
                        Width="580"
                        Height="580"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
                </Grid>

                <local:Footer Grid.Row="2" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
