<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:MagicConch.Support.Converters;assembly=MagicConch.Support"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <Grid>
        <Canvas x:Name="BubbleCanvas" />
        <Border>
            <Grid x:Name="grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <local:Header x:Name="header" Grid.Row="0" />
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <support:SequentialRevealTextBlock
                        Grid.Row="1"
                        Height="255"
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Delay="100"
                        FontFamily="{StaticResource BASKVILL}"
                        FontSize="250"
                        StartDelay="300" 
                        Text="WATSON"
                        Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                        Duration="0:0:1.8" />
                    <!--<support:SequentialRevealTextBlock
                        Grid.Row="1"
                        Height="255"
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Delay="75"
                        FontFamily="{StaticResource BASKVILL}"
                        FontSize="250"
                        StartDelay="600"
                        Text="CONCH"
                        Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                        Duration="0:0:1.5" />-->

                </StackPanel>

                
                <!--<Grid Grid.RowSpan="4" IsHitTestVisible="False">
                    <Image x:Name="Body" Source="/MagicConch;component/Assets/Images/Conch_Body.png" />
                    <Image x:Name="Handle" Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
                </Grid>-->

                <Button
                    Grid.Row="2"
                    Width="300"
                    Height="300"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Background="Transparent">
                    <Button.Content>
                        <Image IsHitTestVisible="False" Source="/MagicConch;component/Assets/Images/AlarmClock.png" />
                    </Button.Content>
                </Button>
            </Grid>


        </Border>
    </Grid>
</UserControl>
