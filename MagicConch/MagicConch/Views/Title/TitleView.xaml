<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:MagicConch.Support.Converters;assembly=MagicConch.Support"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <Grid>
        <Canvas x:Name="BubbleCanvas" />
        <Border>
            <Grid x:Name="grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                

                <support:SequentialRevealTextBlock
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Delay="35"
                    FontFamily="{StaticResource BASKVILL}"
                    FontSize="250"
                    StartDelay="300"
                    Text="MAGIC CONCH"
                    Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                    Duration="0:0:1.5" />
                <local:Header x:Name="header" Grid.Row="0" />
                <Grid Grid.RowSpan="4" IsHitTestVisible="False">
                    <Image x:Name="Body" Source="/MagicConch;component/Assets/Images/Conch_Body.png" />
                    <Image x:Name="Handle" Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
                </Grid>

                <Button Background="Transparent" Width="300" Height="300" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <Button.Content>
                        <Image Source="/MagicConch;component/Assets/Images/AlarmClock.png"/>
                    </Button.Content>
                </Button>
            </Grid>


        </Border>
    </Grid>
</UserControl>
