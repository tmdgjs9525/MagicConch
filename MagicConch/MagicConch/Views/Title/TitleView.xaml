<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:MagicConch.Support.Converters;assembly=MagicConch.Support"
    xmlns:local="clr-namespace:MagicConch.Views.Title" 
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <Grid>
        <Canvas x:Name="BubbleCanvas" />
        <Border>
            <Grid>
                <Grid x:Name="grid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <local:Header x:Name="header" Grid.Row="0" />

                    <support:SequentialRevealTextBlock
                        Grid.Row="0" Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Delay="35"
                        FontFamily="{StaticResource BASKVILL}"
                        FontSize="250"
                        Text="MAGIC CONCH" StartDelay="300"
                        Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                        Duration="0:0:0.5" />

                    <Grid Grid.RowSpan="4">
                        <Image x:Name="Body" Source="/MagicConch;component/Assets/Images/Conch_Body.png"/>
                        <Image x:Name="Handle" Source="/MagicConch;component/Assets/Images/Conch_Handle.png"/>
                    </Grid>
                </Grid>
            </Grid>


        </Border>
    </Grid>
</UserControl>
