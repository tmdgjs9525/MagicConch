<UserControl
    x:Class="MagicConch.Views.Title.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvtrs="clr-namespace:MagicConch.Support.Converters;assembly=MagicConch.Support"
    xmlns:local="clr-namespace:MagicConch.Views.Title"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support">
    <Grid>
        <Canvas x:Name="BubbleCanvas" />
        <Border>
            <Grid x:Name="grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="260" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <local:Header x:Name="header" Grid.Row="0" />

                <Image
                    Grid.RowSpan="4"
                    Width="1000"
                    Height="1000"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False"
                    Source="/MagicConch;component/Assets/Images/Conch_Glow.png" />

                <Viewbox
                    x:Name="viewbox"
                    Grid.Row="1"
                    Width="1820"
                    Height="850"
                    Margin="0,2,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Stretch="Uniform">
                    <StackPanel IsHitTestVisible="False" Orientation="Horizontal">
                        <support:SequentialRevealTextBlock
                            Height="260"
                            Margin="0,0,0,0"
                            Delay="70"
                            FontFamily="{StaticResource BASKVILL}"
                            FontSize="250"
                            StartDelay="300"
                            Text="MAGIC "
                            Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Duration="0:0:1.4" />
                        <support:SequentialRevealTextBlock
                            Height="260"
                            Margin="0,0,0,0"
                            Delay="70"
                            FontFamily="{StaticResource BASKVILL}"
                            FontSize="250"
                            StartDelay="700"
                            Text="CONCH"
                            Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Duration="0:0:1.4" />

                    </StackPanel>
                </Viewbox>

                <Viewbox
                    Grid.RowSpan="4"
                    Width="580"
                    Height="580"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stretch="Uniform">
                    <Grid IsHitTestVisible="False">
                        <Image
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="/MagicConch;component/Assets/Images/Conch_Body.png" />
                        <Image
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
                    </Grid>
                </Viewbox>

                <local:Footer Grid.Row="2" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
