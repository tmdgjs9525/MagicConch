<UserControl
    x:Class="MagicConch.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MagicConch.Views"
    xmlns:support="clr-namespace:MagicConch.Support.Themes.Units;assembly=MagicConch.Support"
    xmlns:title="clr-namespace:MagicConch.Views.Title"
    xmlns:units="clr-namespace:MagicConch.Themes.Units">
    <UserControl.Resources />
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#12F9EF" />
                <GradientStop Offset="0.3" Color="#61FAF8" />
                <GradientStop Offset="0.6" Color="#0AC1FA" />
                <GradientStop Offset="0.8" Color="#0AA3F1" />
                <GradientStop Offset="1" Color="#0071E7" />
            </LinearGradientBrush>
        </Grid.Background>

        <!--
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=1}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=0.96}"
        -->
        <!--<Image
            IsHitTestVisible="False"
            Source="/MagicConch;component/Assets/Images/JellyFish.png" >
            <Image.RenderTransform >
                <ScaleTransform ScaleX="1.005" ScaleY="1.005"></ScaleTransform>
            </Image.RenderTransform>
        </Image>-->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.026*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.026*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.052*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0.052*" />
            </Grid.RowDefinitions>

            <Image
                Grid.RowSpan="5"
                Grid.ColumnSpan="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsHitTestVisible="False"
                Source="/MagicConch;component/Assets/Images/Conch_Glow.png"
                Stretch="Uniform" />

            <title:Header
                x:Name="header"
                Grid.Row="1"
                Grid.Column="1" />

            <Canvas Grid.RowSpan="5" Grid.ColumnSpan="5">
                <support:SequentialRevealTextBlock
                    Canvas.Top="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=13.41}" 
                    Canvas.Left="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=43.34}" 
                    HorizontalAlignment="Center"
                    Delay="70"
                    FontFamily="{StaticResource BASKVILL}"
                    FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=7.68}"
                    IsHitTestVisible="False"
                    StartDelay="300"
                    Text="MAGIC CONCH"
                    TextSpacing="-40"
                    Offset="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                    Duration="0:0:1.4" />
            </Canvas>


            <Grid
                Grid.Row="0"
                Grid.RowSpan="5"
                Grid.ColumnSpan="5"
                IsHitTestVisible="False">
                <Image
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=3.31}"
                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=1.64}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False"
                    Source="/MagicConch;component/Assets/Images/Conch_Body.png" />
                <Image
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=3.31}"
                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=1.64}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False"
                    Source="/MagicConch;component/Assets/Images/Conch_Handle.png" />
            </Grid>

            <title:BackgroundImages Grid.RowSpan="4" Grid.ColumnSpan="4" />

            <Canvas Grid.RowSpan="5" Grid.ColumnSpan="5">
                <units:AlarmClock
                    Canvas.Left="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=40.67}"
                    Canvas.Top="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=1.31}"
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=25.94}"
                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource SizeConverter}, ConverterParameter=5.13}" />
            </Canvas>

            <title:Footer Grid.Row="3" Grid.Column="1" />

        </Grid>
    </Grid>
</UserControl>
